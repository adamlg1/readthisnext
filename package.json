{
    "name": "readthisnext",
    "version": "1.0.0",
    "description": "A book recommendation website using Google Books API",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "client": "cd client && npm start",
        "server": "nodemon server.js",
        "dev:full": "concurrently \"npm run server\" \"npm run client\"",
        "build": "cd client && npm run build",
        "install-client": "cd client && npm install"
    },
    "keywords": [
        "books",
        "recommendations",
        "google-books",
        "api"
    ],
    "author": "Adam Griffin",
    "license": "MIT",
    "dependencies": {
        "axios": "^1.6.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "nodemon": "^3.0.2"
    }
}